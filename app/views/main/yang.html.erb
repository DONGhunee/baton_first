            <tr>
                <td>
                    <% if @post.f_rocker.present? %>
                    <img src="/assets/key.png"><p>보관 시설</p>
                    <% end %>
                </td>
                <td>
                    <% if @post.f_parking.present? %>
                    <img src="/assets/parking.png"><p>주차 시설</p>
                    <% end %>
                </td>
            </tr>
            <tr>
                <td>
                    <% if @post.f_clothes.present? %>
                    <img src="/assets/shirts.png"><p>운동복 대여</p>
                    <% end %>
                </td>
                <td>
                    <% if @post.f_shower.present? %>
                    <img src="/assets/ta.png"><p>샤워 시설</p>
                    <% end %>
                </td>
            </tr>
            <tr>
                <td>
                    <% if @post.f_wifi.present? %>
                    <img src="/assets/wifi.png"><p>무선 인터넷</p>
                    <% end %>
                </td>
            </tr>
        </table>
    </div>
</div>
