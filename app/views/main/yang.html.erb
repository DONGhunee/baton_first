    <p style="font-size:50px;"><%= @post.title %></p>
    <p style="color:#848484;"><%= @post.location %></p>
</div>
<br><br>
<div class="container">
    <div class="tt" style="margin-left:10%;">
        <p class="t1">양도 기간</p>
        <p class="t2"><%= @post.sday %> ~ <%= @post.eday %></p>
        <p class="t1">원가</p>
        <p class="t2"><%= @post.money %>원</p>
