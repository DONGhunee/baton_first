<!--회원가입 모달창-->
    <div class="modal fade2" style="z-index: 3000" id="modalsignup" tabindex="-1" role="dialog" aria-labelledby="modalsignupLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <!--여기에 회원가입 페이지 붙여넣기-->
  <center>
   <h2><img class="img_2" src ='/assets/little.png' width='150px'/></h2>
    </center><br>
 

    <center>
     <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: "ui large form"}) do |f| %>
  <%= f.error_notification %>

   <div class="ui input">
    <%= f.input :name,
                
                label: false,
                required: true,
                autofocus: true ,
                placeholder: "name",
                input_html: { class: 'ui input' }%>
                </div><br><br>
                
                <div class="ui input">
    <%= f.input :age,
                required: true,
                label: false,
                placeholder: "age",
                autofocus: true ,
                input_html: { class: "ui input"}%>
     </div><br><br>
     <div class="ui input">
    <%= f.input :gender, 
                as: :radio_buttons, 
                collection: [['여자', 'female'], ['남자', 'male']], 
                label_method: :second, 
                value_method: :first,
                required: true,
                label: false,
                autofocus: true ,
                input_html: { class: "ui input" }%>
                   </div><br><br>
            <div class="ui input">    
    <%= f.input :email,
                required: true,
                label: false,
                placeholder: "email",
                autofocus: true ,
                input_html: { class: "ui input" }%>
                   </div><br><br>
                <div class="ui input">
    <%= f.input :password,
                required: true,
                label: false,
                placeholder: "password(more than 6)",
                input_html: {class: "ui input" } %>
                   </div><br><br>
                <div class="ui input">
    <%= f.input :password_confirmation,
                required: true,
                label: false,
                placeholder: "password_confirmation",
                input_html: { class: "ui input" } %>
                   </div><br><br>
 

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<!--회원가입 모달창 끝 -->



        </div>
        
        <%if false%>
        <%= render "devise/shared/links" %>
        <%end%>
        
        
          </div>
              </div>
        </div>
          
      </div>
