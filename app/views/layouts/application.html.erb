<div class="modal fade" style="z-index: 3000;" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <!--여기에 로그인 페이지 붙여넣기-->
        <div class="ui centered grid" style="margin: 2% 0 0 2%;">
          <div class="col-xs-12 col-sm-12  col-md-6" id="aaa">
            <img id="imim" src="/assets/batontouch_yellow.png"/>
          </div>
          
          <div class="col-xs-12 col-sm-12 col-md-6" id="bbb" >
        
        <div class="ui basic padded segment">
          
        <!--오류나는곳-->
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'ui small form'}) do |f| %>
  <div class="field">
    <div class="ui fluid left icon input" >
      <i class="envelope icon"></i>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail address" %>
    </div>
  </div>

  <div class="field">
    <div class="ui fluid left icon input">
      <i class="key icon"></i>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password"%>
    </div>
  </div>
  
  <div class="field">
      <%= f.submit '로그인', :class => "ui fluid yellow button" %>
  </div>
  
  <div class="field">
  <button type="button" onclick="location.href= '/users/sign_up' " class="ui fluid yellow button">회원가입</button>
    <!-- <div id="signup_popup" class="ui fluid yellow button" data-toggle="modal" data-target="#modalsignup">회원가입</div> -->
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <div class="ui toggle checkbox">
        <%= f.check_box :remember_me %>
        <label>비밀번호 저장</label>
      </div>
    </div>
  
    
  <% end -%>

<% end %>
<!--여기까지 수정-->

